  echo "ä½¿ã„æ–¹: $0 [ã‚ªãƒ—ã‚·ãƒ§ãƒ³] [ã‚³ãƒŸãƒƒãƒˆãƒ¡ãƒƒã‚»ãƒ¼ã‚¸]"
  echo ""
  echo "ã‚ªãƒ—ã‚·ãƒ§ãƒ³:"
  echo "  -h, --help     ã“ã®ãƒ˜ãƒ«ãƒ—ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’è¡¨ç¤º"
  echo "  -d, --diff     å¤‰æ›´ã®å·®åˆ†ã‚’è¡¨ç¤º"
  echo "  -s, --specific ãƒ•ã‚¡ã‚¤ãƒ«ã‚’æŒ‡å®šã—ã¦ã‚³ãƒŸãƒƒãƒˆ"
  echo "  -p, --pull     ãƒ—ãƒƒã‚·ãƒ¥å‰ã«ãƒ—ãƒ«ã‚’å®Ÿè¡Œ"
  echo "  -b, --branch   ãƒ–ãƒ©ãƒ³ãƒã‚’æŒ‡å®šã¾ãŸã¯ä½œæˆ"
  echo ""
  echo "ä¾‹:"
  echo "  $0                        # ã™ã¹ã¦ã®å¤‰æ›´ã‚’ã€Œè‡ªå‹•æ›´æ–°ã€ã¨ã—ã¦ã‚³ãƒŸãƒƒãƒˆ"
  echo "  $0 \"æ–°æ©Ÿèƒ½ã‚’è¿½åŠ \"         # ã™ã¹ã¦ã®å¤‰æ›´ã‚’æŒ‡å®šãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã§ã‚³ãƒŸãƒƒãƒˆ"
  echo "  $0 -d                     # å¤‰æ›´ã®å·®åˆ†ã‚’è¡¨ç¤ºã—ã¦ã‹ã‚‰å‡¦ç†"
  echo "  $0 -s \"file1.txt file2.js\" \"ãƒ•ã‚¡ã‚¤ãƒ«ã‚’æ›´æ–°\" # ç‰¹å®šã®ãƒ•ã‚¡ã‚¤ãƒ«ã ã‘ã‚³ãƒŸãƒƒãƒˆ"
  echo "  $0 -p                     # ãƒ—ãƒ«â†’ã‚³ãƒŸãƒƒãƒˆâ†’ãƒ—ãƒƒã‚·ãƒ¥ã®é †ã§å®Ÿè¡Œ"
  echo "  $0 -b feature-x \"æ–°æ©Ÿèƒ½x\" # feature-xãƒ–ãƒ©ãƒ³ãƒã§ä½œæ¥­"
  echo -e "${BLUE}===============================${NC}"
  exit 0
}

# ã‚³ãƒãƒ³ãƒ‰ãƒ©ã‚¤ãƒ³å¼•æ•°ã®è§£æ
SHOW_DIFF=false
SPECIFIC_FILES=""
DO_PULL=false
BRANCH_NAME=""

while [[ $# -gt 0 ]]; do
  case $1 in
    -h|--help)
      show_help
      ;;
    -d|--diff)
      SHOW_DIFF=true
      shift
      ;;
    -s|--specific)
      SPECIFIC_FILES="$2"
      shift 2
      ;;
    -p|--pull)
      DO_PULL=true
      shift
      ;;
    -b|--branch)
      BRANCH_NAME="$2"
      shift 2
      ;;
    -*)
      echo -e "${RED}ã‚¨ãƒ©ãƒ¼: ä¸æ˜ãªã‚ªãƒ—ã‚·ãƒ§ãƒ³ $1${NC}"
      show_help
      ;;
    *)
      COMMIT_MESSAGE="$1"
      shift
      ;;
  esac
