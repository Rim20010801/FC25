# ç¾åœ¨ã®ãƒ–ãƒ©ãƒ³ãƒåã‚’å–å¾—
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)
echo -e "${GREEN}ğŸŒ¿ ç¾åœ¨ã®ãƒ–ãƒ©ãƒ³ãƒ: ${CURRENT_BRANCH}${NC}"

# å¤‰æ›´ã®å·®åˆ†ã‚’è¡¨ç¤º
if [ "$SHOW_DIFF" = true ]; then
  echo -e "${YELLOW}ğŸ“‹ å¤‰æ›´ã®å·®åˆ†:${NC}"
  git diff
  echo ""
  echo -e "${YELLOW}ç¶šè¡Œã—ã¾ã™ã‹ï¼Ÿ [Y/n]${NC}"
  read answer
  if [[ "$answer" == "n" || "$answer" == "N" ]]; then
    echo -e "${RED}å‡¦ç†ã‚’ä¸­æ­¢ã—ã¾ã—ãŸ${NC}"
    exit 0
  fi
fi

# ç¾åœ¨ã®çŠ¶æ…‹ã‚’è¡¨ç¤º
echo -e "${BLUE}ğŸ“Š ç¾åœ¨ã®çŠ¶æ…‹:${NC}"
