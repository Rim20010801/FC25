if [ "$DO_PULL" = true ]; then
  echo -e "${YELLOW}â¬‡ï¸ ãƒªãƒ¢ãƒ¼ãƒˆã‹ã‚‰æœ€æ–°ã®å¤‰æ›´ã‚’å–å¾—ã—ã¦ã„ã¾ã™...${NC}"
  git pull origin $CURRENT_BRANCH

  # ã‚³ãƒ³ãƒ•ãƒªã‚¯ãƒˆãƒã‚§ãƒƒã‚¯
  if [ $? -ne 0 ]; then
    echo -e "${RED}âš ï¸ ãƒãƒ¼ã‚¸ã‚³ãƒ³ãƒ•ãƒªã‚¯ãƒˆãŒç™ºç”Ÿã—ãŸã‹ã‚‚ã—ã‚Œã¾ã›ã‚“ã€‚è§£æ±ºã—ã¦ã‹ã‚‰å†åº¦å®Ÿè¡Œã—ã¦ãã ã•ã„ã€‚${NC}"
    exit 1
  fi
fi

# å¤‰æ›´ã‚’ã‚¹ãƒ†ãƒ¼ã‚¸ãƒ³ã‚°
echo -e "${BLUE}â• å¤‰æ›´ã‚’ã‚¹ãƒ†ãƒ¼ã‚¸ãƒ³ã‚°ã«è¿½åŠ ã—ã¦ã„ã¾ã™...${NC}"
if [ ! -z "$SPECIFIC_FILES" ]; then
  # ã‚¹ãƒšãƒ¼ã‚¹ã§åŒºåˆ‡ã‚‰ã‚ŒãŸãƒ•ã‚¡ã‚¤ãƒ«ãƒªã‚¹ãƒˆã‚’å‡¦ç†
  for file in $SPECIFIC_FILES; do
    if [ -e "$file" ]; then
      git add "$file"
      echo "  è¿½åŠ : $file"
    else
      echo -e "${RED}  è­¦å‘Š: ãƒ•ã‚¡ã‚¤ãƒ« '$file' ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“${NC}"
    fi
